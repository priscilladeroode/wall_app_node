{
  "compilerOptions": {
    "outDir": "./dist",
    "module":"CommonJS",
    "target": "ES2019",
    "sourceMap": true,
    "rootDirs": [
      "src",
      "tests"
    ],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": [
        "../tests/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": []
}